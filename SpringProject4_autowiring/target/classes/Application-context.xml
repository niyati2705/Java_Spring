<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
                http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
<bean id="address" class="com.code.Address">
	<property name="city"><value>Pune</value></property>
	<property name="state"><value>MH</value></property>
</bean> 

<bean id="empbean" class="com.code.Employee" autowire="byType">  
	<property name="id">  <value>20</value>  </property>  
	<property name="name">  <value> Alisa </value>  </property>
	<property name="address" ref="address"/>
</bean> 

