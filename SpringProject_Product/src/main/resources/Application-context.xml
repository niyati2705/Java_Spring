<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
                http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

<bean id="prodbean" class="com.code.Product">  
	<property name="id">  <value>20</value>  </property>  
	<property name="name">  <value> Television </value>  </property>
	<property name="price">  <value> 50000 </value>  </property>
	<property name="order" ref="order"/>
</bean>  

<bean id="order" class="com.code.Order">
	<property name="id"><value>101</value></property>
	<property name="orderDate"><value>27/05/2024</value></property>
</bean> 
 </beans>